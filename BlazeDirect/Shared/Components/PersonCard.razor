@using BlazeDirect.Data  
@using MudBlazor  

<MudPaper Elevation="2" Class="pa-4" Style="border-radius: 10px; width: 100%; box-sizing: border-box;">  
   <MudText Typo="Typo.h6" GutterBottom="true">@Person.FirstName @Person.LastName</MudText>  
   <MudText Typo="Typo.body1">@Person.Address</MudText>  
</MudPaper>  

@code {  
   [Parameter]  
   public required Person Person { get; set; }  
}
